@model ShoppingCartVm

    <!-- Breadcrumb Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light mb-30">
                    <a class="breadcrumb-item text-dark" href="#">Home</a>
                    <a class="breadcrumb-item text-dark" href="#">Shop</a>
                    <span class="breadcrumb-item active">Shopping Cart</span>
                </nav>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->

    <!-- Cart Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-8 table-responsive mb-5">
                @if(Model.ShoppingCartTotal==0)
                {
                <div style="text-align: center; padding: 40px; background-color: #f8f9fa; border-radius: 10px;">
                    <h2 style="color: #dc3545;">🛒 Your cart is empty!</h2>
                    <p style="font-size: 16px;">Don't miss out—add a <strong>FREE product</strong> and enjoy the offer now.</p>
                    <a asp-controller="Home" asp-action="Index">
                        <button style="border: none; padding: 12px 25px; font-size: 16px; border-radius: 6px; cursor: pointer;" class="btn btn-primary">
                            ➕ Add Product Now
                        </button>
                    </a>
                </div>

                }
                else
                {
                    <table class="table table-light table-borderless table-hover text-center mb-0">
                        <thead class="thead-dark">
                            <tr>
                                <th>Products</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>Remove</th>
                            </tr>
                        </thead>
                        <tbody class="align-middle">

                            @foreach(var item in Model.LstShoppingCart)
                        {
                            <tr>
                                <!--
                                    <td class="align-middle"><img src="item.poducts.Img" alt="" style="width: 50px;"> item.poducts.Name</td>
                                -->
                                <td class="align-middle d-flex align-items-center" style="gap: 10px;">
                                    <img src="@item.TbProducts.Img" alt="@item.TbProducts.Name" style="width: 60px; height: 60px; object-fit: cover; border-radius: 5px;">
                                    <span>@item.TbProducts.Name</span>
                                </td>
                                <td class="align-middle">$@item.TbProducts.purchaseprices</td>
                                <td class="align-middle">
                                    <div class="input-group quantity mx-auto" style="width: 100px;">
                                        <div class="input-group-btn">
                                            <a asp-controller="Order" asp-action="Minus" asp-route-cartId="@item.ShoppingCartId">
                                                <button class="btn btn-sm btn-primary btn-minus">
                                                    <i class="fa fa-minus"></i>
                                                </button>
                                            </a>
                                        </div>
                                        <span class="form-control form-control-sm bg-secondary border-0 text-center">@item.Quantity</span>
                                        <!--
                                            <input  type="text" class="form-control form-control-sm bg-secondary border-0 text-center" value="1">
                                        -->
                                        <div class="input-group-btn">
                                            <a asp-controller="Order" asp-action="Plus" asp-route-cartId="@item.ShoppingCartId">
                                                <button class="btn btn-sm btn-primary btn-plus">
                                                    <i class="fa fa-plus"></i>
                                                </button>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                                <td class="align-middle">$@(item.TbProducts.purchaseprices * item.Quantity)</td>
                                <td class="align-middle">
                                    <a asp-controller="Order" asp-action="RemoveProduct" asp-route-cartId="@item.ShoppingCartId">
                                        <button class="btn btn-sm btn-danger"><i class="fa fa-times"></i></button>
                                    </a>
                                </td>
                            </tr>
                        }
                    

                        </tbody>
                    </table>
                }
            
            </div>
            <div class="col-lg-4">
                @if(Model.ShoppingCartTotal != 0)
            {
                <form class="mb-30" action="">
                    <div class="input-group">
                        <input type="text" class="form-control border-0 p-4" placeholder="Coupon Code">
                        <div class="input-group-append">
                            <button class="btn btn-primary">Apply Coupon</button>
                        </div>
                    </div>
                </form>
            }
            
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Cart Summary</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="border-bottom pb-2">
                        <div class="d-flex justify-content-between mb-3">
                            <h6>Subtotal</h6>
                           <h6>$@Model.ShoppingCartTotal</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            @if(Model.ShoppingCartTotal != 0)
                        {
                            <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium">$10</h6>
                        }
                        else
                        {
                            <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium">$0</h6>
                        }

                        </div>
                    </div>
                    <div class="pt-2">
                        <div class="d-flex justify-content-between mt-2">
                            <h5>Total</h5>
                        @if (Model.ShoppingCartTotal != 0)
                        {
                            <h5>$@(Model.ShoppingCartTotal + 10)</h5>
                        }
                        else
                        {
                            <h5>$@(Model.ShoppingCartTotal + 0)</h5>
                        }
                    </div>
                    @if(Model.ShoppingCartTotal>0)
                    {
                        <a asp-controller="Order" asp-action="CheckOut">
                        <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Proceed To Checkout</button>
                        </a>
                    }
                    
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Cart End -->

    