@model ShoppingCartVm
<!-- ?? -->
@using Microsoft.Extensions.Options
@inject IOptions<ECommerce.Helper.StripeBank> Stripe
<!-- ?? -->


    <!-- Breadcrumb Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light mb-30">
                    <a class="breadcrumb-item text-dark" href="#">Home</a>
                    <a class="breadcrumb-item text-dark" href="#">Shop</a>
                    <span class="breadcrumb-item active">Checkout</span>
                </nav>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->


    <!-- Checkout Start -->
    <div class="container-fluid">

    <form method="post" role="form" asp-controller="Order" asp-action="CheckOut" enctype="multipart/form-data">

        <div class="row px-xl-5">
            <div class="col-lg-8">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Billing Address</span></h5>

                
                <div class="bg-light p-30 mb-5">
                    <!-- User Details -->
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Name</label>
                            <input asp-for="OrderHeader.UserName" class="form-control" type="text" placeholder="John">
                            <span asp-validation-for="OrderHeader.UserName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>E-mail</label>
                            <input asp-for="OrderHeader.ApplicationUser.Email" class="form-control" type="text" placeholder="example@email.com">
                            <span asp-validation-for="OrderHeader.ApplicationUser.Email" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 form-group">
                            <label>Mobile No</label>
                            <input asp-for="OrderHeader.PhoneNumber" class="form-control" type="text" placeholder="+123 456 789">
                            <span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>City</label>
                            <input asp-for="OrderHeader.City" class="form-control" type="text" placeholder="New York">
                            <span asp-validation-for="OrderHeader.City" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 form-group">
                            <label>Address </label>
                            <input asp-for="OrderHeader.Adress" class="form-control" type="text" placeholder="123 Street">
                            <span asp-validation-for="OrderHeader.Adress" class="text-danger"></span>
                        </div>

                    </div>
                </div>
                
                <div class="collapse mb-5" id="shipping-address">
                    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Shipping Address</span></h5>
                    <div class="bg-light p-30">
                        <!-- User Details -->
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label>Name</label>
                                <input asp-for="OrderHeader.UserName" class="form-control" type="text" placeholder="John">
                                <span asp-validation-for="OrderHeader.UserName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group">
                                <label>E-mail</label>
                                <input asp-for="OrderHeader.ApplicationUser.Email" class="form-control" type="text" placeholder="example@email.com">
                                <span asp-validation-for="OrderHeader.ApplicationUser.Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 form-group">
                                <label>Mobile No</label>
                                <input asp-for="OrderHeader.PhoneNumber" class="form-control" type="text" placeholder="+123 456 789">
                                <span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group">
                                <label>City</label>
                                <input asp-for="OrderHeader.City" class="form-control" type="text" placeholder="New York">
                                <span asp-validation-for="OrderHeader.City" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 form-group">
                                <label>Address </label>
                                <input asp-for="OrderHeader.Adress" class="form-control" type="text" placeholder="123 Street">
								<span asp-validation-for="OrderHeader.Adress" class="text-danger"></span>
                            </div>

                        </div>
                    </div>
                </div>

            </div>

            <div class="col-lg-4">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Order Total</span></h5>

                <!-- Cart Information-->
                <div class="bg-light p-30 mb-5">
                    <div class="border-bottom">
                        <h6 class="mb-3">Products</h6>

                    @foreach(var item in Model.LstShoppingCart)
                    {
                        <div class="d-flex justify-content-between">
                            <p>@item.TbProducts.Name × @item.Quantity</p>
                            <p>$@item.TbProducts.purchaseprices</p>
                        </div>
                    }

                    </div>
                    <div class="border-bottom pt-3 pb-2">
                        <div class="d-flex justify-content-between mb-3">
                            <h6>Subtotal</h6>
                            <h6>$@Model.ShoppingCartTotal</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium">$10</h6>
                        </div>
                    </div>
                    <div class="pt-2">
                        <div class="d-flex justify-content-between mt-2">
                            <h5>Total</h5>
                            <h5>$@(Model.ShoppingCartTotal+10)</h5>
                        </div>
                    </div>
                </div>

                <!-- Payment Type-->
                <div class="mb-5">
                    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Payment</span></h5>
                    <div class="bg-light p-30">

                        <div class="form-group">
                            <div class="custom-control">
                                <input class="custom-control-input" name="payment" id="directcheck">
                                <label class="custom-control-label" for="directcheck">Direct Check</label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-block btn-primary font-weight-bold py-3">Place Order</button>
                    </div>
                </div>

            </div>
        </div>

    </form>
    </div>
    <!-- Checkout End -->
@section ValidationScript {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

  