<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4 p-4 bg-light">
                <h2 class="text-center fw-bold mb-4 text-dark">Create a New Account</h2>
                <p>If you want to use as Admin to Use to Dashboard</p>
                <p> Email    ->  Ahmed254010@ECommerce.com </p>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-4">
                        <label asp-for="Input.UserName">👤 Username</label>
                        <input asp-for="Input.UserName" class="form-control rounded-pill" placeholder="UserName" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <label asp-for="Input.Email">📧 Email</label>
                        <input asp-for="Input.Email" class="form-control rounded-pill" placeholder="name@example.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <label asp-for="Input.Adress">🏠 Address</label>
                        <input asp-for="Input.Adress" class="form-control rounded-pill" placeholder="Address" />
                        <span asp-validation-for="Input.Adress" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <label asp-for="Input.Password">🔒 Password</label>
                        <input asp-for="Input.Password" class="form-control rounded-pill" placeholder="••••••••" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <label asp-for="Input.ConfirmPassword">🔒 Confirm Password</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control rounded-pill" placeholder="••••••••" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>


                    @if(User.IsInRole(TbRoles.Admin))
                    {
                        <input type="radio" value="@TbRoles.Admin" name="RoleRadio" /> 
                        @TbRoles.Admin
                        <input type="radio" value="@TbRoles.Editor" name="RoleRadio" /> 
                        @TbRoles.Editor
                        <button id="registerSubmit" type="submit" class="btn btn-gradient btn-outline-dark w-100 py-2 fw-semibold rounded-pill">🚀 Add New User</button>
                    }
                    else
                    {
                        <button id="registerSubmit" type="submit" class="btn btn-gradient btn-outline-dark w-100 py-2 fw-semibold rounded-pill">🚀 Register</button>
                    }
                    
                </form>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-0 bg-white rounded-4 shadow-sm p-4 mt-4 mt-md-0">
                <h3 class="text-center fw-semibold text-muted mb-3">Use Another Service</h3>
                <hr />
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div class="alert alert-warning text-center">
                            No external services configured. <a href="https://go.microsoft.com/fwlink/?LinkID=532715">Learn more</a>.
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-outline-dark mx-2 my-1 rounded-pill" name="provider" value="@provider.Name">@provider.DisplayName</button>
                            }
                        </form>
                    }
                }
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
